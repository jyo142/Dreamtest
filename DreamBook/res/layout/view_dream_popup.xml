<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starrynight"
    android:orientation="vertical" >

<Button
    android:id="@+id/button1"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:onClick="dismissDreamVP"
    android:text="@string/x_string" />

<TextView
    android:id="@+id/dream_subject_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/button1"
    android:textColor="@color/title_color"
    android:layout_centerHorizontal="true"
    android:textSize="20dp"
    android:textStyle="bold"
    android:text="TextView" />

<TextView
    android:id="@+id/dream_content_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/dream_subject_popup"
    android:layout_marginTop="34dp"
    android:textSize="15dp"
    android:text="TextView"
    android:textAlignment="center"
    android:textColor="@color/title_color" />
	
</RelativeLayout>